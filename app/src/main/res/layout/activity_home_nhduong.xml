<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtAppName_NHDuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foody"
            android:textSize="26sp"
            android:textColor="#D81B60"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edtSearch_NHDuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm quán ăn"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/imgRestaurant_NHDuong"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurant_banhmi" />

        <TextView
            android:id="@+id/txtRestaurantName_NHDuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quán bánh mì cô Mai"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/txtRestaurantAddress_NHDuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: số 3, đường 275, phường Hiệp Phú, Thành phố Thủ Đức, Thành phố Hồ Chí Minh" />

        <TextView
            android:id="@+id/txtPhone_NHDuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SĐT: 093947580" />

        <LinearLayout
            android:id="@+id/layoutFoodList_NHDuong"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvRestaurant_NHDuong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</ScrollView>
